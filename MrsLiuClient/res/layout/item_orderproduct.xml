<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/order_frame"
	android:padding="10dp"
	>
	<ImageView 
	    android:id="@+id/oproduct_img"
	    android:layout_width="96dp"
		android:layout_height="96dp"
		android:scaleType="fitXY"
        android:padding="0.5dp"
        android:background="@drawable/product_frame"
		android:layout_marginRight="@dimen/px_20"
	    />
	<TextView 
	    android:id="@+id/oproduct_price"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/app_text_size_first"
		android:textColor="@color/color_blue"
		android:layout_alignParentRight="true"
		android:layout_marginRight="@dimen/px_20"
		android:layout_marginLeft="@dimen/px_20"
	    />
	<TextView 
	    android:id="@+id/oproduct_name"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/app_text_size_first"
		android:textColor="@color/TextColorBLACK_NORMAL"
		android:layout_toRightOf="@id/oproduct_img"
		android:layout_toLeftOf="@id/oproduct_price"
	    />
	<TextView 
	    android:id="@+id/oproduct_num"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/app_text_size_second"
		android:textColor="@color/TextColorBLACK_NORMAL"
		android:layout_marginTop="25dp"
		android:layout_alignParentRight="true"
		android:layout_marginRight="@dimen/px_20"
		android:layout_marginLeft="@dimen/px_20"
		android:layout_below="@id/oproduct_price"
	    />
	
</RelativeLayout>